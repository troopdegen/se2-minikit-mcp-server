{
  "name": "basic",
  "version": "1.0.0",
  "description": "Basic Scaffold-ETH 2 project with simple smart contract",
  "author": "SE2-Minikit MCP Server",
  "tags": ["scaffold-eth", "basic", "starter"],
  "variables": [
    {
      "name": "projectName",
      "type": "string",
      "description": "Name of the project",
      "required": true,
      "pattern": "^[a-z][a-z0-9-]*$",
      "default": "my-dapp"
    },
    {
      "name": "author",
      "type": "string",
      "description": "Project author name",
      "required": true,
      "default": "Anonymous"
    },
    {
      "name": "description",
      "type": "string",
      "description": "Project description",
      "required": false,
      "default": "A decentralized application built with Scaffold-ETH 2"
    },
    {
      "name": "network",
      "type": "string",
      "description": "Target blockchain network",
      "required": false,
      "default": "base-sepolia",
      "enum": ["base-sepolia", "base", "localhost"]
    },
    {
      "name": "contractName",
      "type": "string",
      "description": "Name of the main smart contract",
      "required": false,
      "default": "YourContract"
    }
  ],
  "files": [
    {
      "source": ".",
      "target": ".",
      "recursive": true,
      "exclude": ["template.json"]
    }
  ],
  "hooks": []
}
